{% extends '@' ~ tpl_namespace ~ '/layout/form/vertical_layout.html.twig' %}

{% macro start() %}
  <form action="/project/add" method="post">
{% endmacro %}

{% macro row(form, variable) %}
  {% if (form.name) is defined %}
    {% set name = form.name %}
  {% else %}
    {% set name = '' %}
  {% endif %}

  {% if variable.id is defined %}
    {% set id = variable.id %}
  {% else %}
    {% set id = name %}
  {% endif %}

  {{ block('form_row') }}
{% endmacro %}

{% macro label(form, variable) %}
  {% if (form.name) is defined %}
    {% set name = form.name %}
  {% else %}
    {% set name = '' %}
  {% endif %}

  {% if variable.id is defined %}
    {% set id = variable.id %}
  {% else %}
    {% set id = name %}
  {% endif %}

  {{ block('form_label') }}
{% endmacro %}

{% macro widget(form, variable) %}
  {% if (form.name) is defined %}
    {% set name = form.name %}
  {% else %}
    {% set name = '' %}
  {% endif %}

  {% if variable.id is defined %}
    {% set id = variable.id %}
  {% else %}
    {% set id = name %}
  {% endif %}

  {{ block('form_widget') }}
{% endmacro %}

{% macro errors(form, variable) %}
  {{ block('form_errors') }}
{% endmacro %}
